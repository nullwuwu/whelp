{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "independent": true,
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**", "**/*.md"],
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": ["master"],
      "message": "chore(release): publish"
    }
  }
}
